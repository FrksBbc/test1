{% include 'header.html.twig' %}

{#
{{ dump(users) }}
#}

<div class="container">
    <h1 class="display-5 text-center mt-3">Felhasználók</h1>
    <table class="table table-hover mt-5 text-center">
        <tr>
            <th>ID</th>
            <th>Név</th>
            <th>Email</th>
            <th>Jogosultság</th>
            <th>Állapot</th>
            <th>Műveletek</th>
        </tr>
        {% for user in users %}
        <tr>
            <td>{{user.id}}</td>
            <td>{{user.last_name}} {{user.first_name}}</td>
            <td>{{user.email}}</td>
            <td>{{user.name}}</td>
            <td>{{user.status ? 'Aktív': 'Inaktív'}}</td>
            <td>
                <a class='btn btn-warning' href='userEdit/{{user.id}}'> <i class="fa-solid fa-edit"></i> Módosít</a>
                <a class='btn btn-danger' href='userDelete/{{user.id}}'> <i class="fa-solid fa-trash"></i> Töröl</a>
           </td>
        {% endfor %}
        </tr>
    </table>
</div>
{% include 'footer.html.twig' %}